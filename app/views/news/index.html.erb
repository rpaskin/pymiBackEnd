<p id="notice"><%= notice %></p>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Headline</th>
      <th>Description</th>
      <th>Category</th>
      <th>Checker</th>
      <th>Verdict</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.url %></td>
        <td><%= news.headline %></td>
        <td><%= news.description %></td>
        <td><%= news.category %></td>
        <td><%= news.checker %></td>
        <td><%= news.verdict %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_news_path %>
