<p id="notice"><%= notice %></p>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Headline</th>
      <th>Category</th>
      <th>Checker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.headline %></td>
        <td><%= news.category.name %></td>
        <td><%= news.checker.name %></td>
        <td><%= link_to 'Show', news %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td colspan="9"><i style="font-size:70%"><%= news.description %></i></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
